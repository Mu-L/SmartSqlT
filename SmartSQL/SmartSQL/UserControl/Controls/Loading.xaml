<UserControl
    x:Class="SmartSQL.UserControl.Controls.Loading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    IsVisibleChanged="HandleVisibleChanged"
    mc:Ignorable="d">
    <UserControl.Background>
        <SolidColorBrush Opacity="{Binding BackgroundOpacity}" Color="Black" />
    </UserControl.Background>
    <UserControl.Resources>
        <SolidColorBrush x:Key="CirclesColor" Color="#FF007BE5" />
    </UserControl.Resources>
    <Border>
        <Viewbox
            Width="100"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Grid
                x:Name="LayoutRoot"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                ToolTip="请稍等....">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#ff8c4c"
                    Text="加载中..." />
                <Canvas
                    Width="120"
                    Height="120"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Loaded="HandleLoaded"
                    RenderTransformOrigin="0.5,0.5"
                    Unloaded="HandleUnloaded">
                    <Ellipse
                        x:Name="C0"
                        Canvas.Left="0"
                        Canvas.Top="0"
                        Width="20"
                        Height="20"
                        Fill="{StaticResource CirclesColor}"
                        Opacity="1.0"
                        Stretch="Fill" />
                    <Ellipse
                        x:Name="C1"
                        Canvas.Left="0"
                        Canvas.Top="0"
                        Width="20"
                        Height="20"
                        Fill="{StaticResource CirclesColor}"
                        Opacity="0.9"
                        Stretch="Fill" />
                    <Ellipse
                        x:Name="C2"
                        Canvas.Left="0"
                        Canvas.Top="0"
                        Width="20"
                        Height="20"
                        Fill="{StaticResource CirclesColor}"
                        Opacity="0.8"
                        Stretch="Fill" />
                    <Ellipse
                        x:Name="C3"
                        Canvas.Left="0"
                        Canvas.Top="0"
                        Width="20"
                        Height="20"
                        Fill="{StaticResource CirclesColor}"
                        Opacity="0.7"
                        Stretch="Fill" />
                    <Ellipse
                        x:Name="C4"
                        Canvas.Left="0"
                        Canvas.Top="0"
                        Width="20"
                        Height="20"
                        Fill="{StaticResource CirclesColor}"
                        Opacity="0.6"
                        Stretch="Fill" />
                    <Ellipse
                        x:Name="C5"
                        Canvas.Left="0"
                        Canvas.Top="0"
                        Width="20"
                        Height="20"
                        Fill="{StaticResource CirclesColor}"
                        Opacity="0.5"
                        Stretch="Fill" />
                    <Ellipse
                        x:Name="C6"
                        Canvas.Left="0"
                        Canvas.Top="0"
                        Width="20"
                        Height="20"
                        Fill="{StaticResource CirclesColor}"
                        Opacity="0.4"
                        Stretch="Fill" />
                    <Ellipse
                        x:Name="C7"
                        Canvas.Left="0"
                        Canvas.Top="0"
                        Width="20"
                        Height="20"
                        Fill="{StaticResource CirclesColor}"
                        Opacity="0.3"
                        Stretch="Fill" />
                    <Ellipse
                        x:Name="C8"
                        Canvas.Left="0"
                        Canvas.Top="0"
                        Width="20"
                        Height="20"
                        Fill="{StaticResource CirclesColor}"
                        Opacity="0.2"
                        Stretch="Fill" />
                    <Canvas.RenderTransform>
                        <RotateTransform x:Name="SpinnerRotate" Angle="0" />
                    </Canvas.RenderTransform>
                </Canvas>
            </Grid>
        </Viewbox>
    </Border>
</UserControl>
