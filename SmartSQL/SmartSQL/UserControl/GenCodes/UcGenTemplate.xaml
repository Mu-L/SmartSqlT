<UserControl
    x:Class="SmartSQL.UserControl.GenCodes.UcGenTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:SmartSQL.UserControl.GenCodes"
    xmlns:localbase="clr-namespace:SmartSQL.UserControl.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:SmartSQL.Models"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="3.3*"
                MinWidth="220"
                MaxWidth="450" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="6.6*" />
        </Grid.ColumnDefinitions>

        <!--  左侧菜单  -->
        <DockPanel Grid.Row="0" Grid.Column="0">
            <Border
                Margin="5,5,0,5"
                Background="{DynamicResource RegionBrush}"
                CornerRadius="8">
                <Grid
                    Height="Auto"
                    Margin="5"
                    Background="Transparent">
                    <TextBox x:Name="HidSelectDatabase" Visibility="Hidden" />

                    <hc:SearchBar
                        x:Name="SearchMenu"
                        Height="30"
                        Margin="0,0,0,0"
                        Padding="5,0,5,0"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Stretch"
                        hc:BorderElement.CornerRadius="5"
                        hc:InfoElement.Placeholder="搜索模板"
                        Background="#F4F5F7"
                        BorderThickness="0"
                        FontSize="13"
                        ShowClearButton="True"
                        Style="{StaticResource SearchBarPlus}" />

                    <Grid
                        x:Name="NoDataText"
                        Margin="0,100,0,5"
                        HorizontalAlignment="Stretch"
                        Background="White"
                        Cursor="Arrow">
                        <localbase:NoDataArea
                            x:Name="NoDataAreaText"
                            Margin="0"
                            HorizontalAlignment="Center"
                            ShowType="All" />
                    </Grid>
                    <!--  数据加载Loading  -->
                    <localbase:Loading
                        x:Name="LoadingLine"
                        BackgroundOpacity="0.1"
                        Visibility="Collapsed" />
                </Grid>
            </Border>
        </DockPanel>

        <!--  分割线  -->
        <GridSplitter
            Grid.Row="0"
            Grid.Column="1"
            Width="5"
            Margin="0,5,0,5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent" />

        <!--  MainContent  -->
        <DockPanel Grid.Column="2">
            <Border
                Name="Main"
                Margin="0,5,5,5"
                Background="White"
                CornerRadius="8">
                <Grid>
                    <!--  导出参数设置  -->
                    <Grid Margin="0,0,0,35" />
                    <!--  导出参数设置  -->

                    <!--  按钮栏  -->
                    <Border
                        VerticalAlignment="Bottom"
                        Background="#f5f5f5"
                        CornerRadius="0 0 8 8">
                        <Grid>
                            <hc:SimpleStackPanel
                                Margin="5"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom">
                                <hc:UniformSpacingPanel Spacing="10">
                                    <Button
                                        x:Name="BtnExport"
                                        Height="25"
                                        Padding="20,0,20,0"
                                        Click="BtnExport_OnClick"
                                        Content="导出"
                                        Cursor="Hand"
                                        Style="{StaticResource ButtonPrimary}" />
                                    <Button
                                        x:Name="BtnCancel"
                                        Height="25"
                                        Padding="20,0,20,0"
                                        BorderThickness="0.4"
                                        Click="BtnCancel_OnClick"
                                        Content="取消"
                                        Cursor="Hand" />
                                </hc:UniformSpacingPanel>
                            </hc:SimpleStackPanel>
                        </Grid>
                    </Border>
                    <!--  按钮栏  -->
                </Grid>
            </Border>
        </DockPanel>
        <!--  MainContent  -->

        <!--  Loading动画  -->
        <localbase:ExportLoading
            x:Name="LoadingG"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            BackgroundOpacity="0.3"
            Visibility="Collapsed" />
        <!--  Loading动画  -->
    </Grid>
</UserControl>
