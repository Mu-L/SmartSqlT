<hc:Window
    x:Class="SmartSQL.Views.SettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:SmartSQL.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="设置"
    Width="550"
    Height="330"
    BorderThickness="0"
    Icon="../Resources/Img/icon_setting.png"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" MinWidth="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  左侧菜单  -->
        <Border
            Margin="5"
            Background="#ffffff"
            CornerRadius="8">
            <Grid>
                <ListBox
                    Name="ListGroup"
                    Margin="8"
                    BorderThickness="0"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource ListBoxItemBaseStyle}" TargetType="ListBoxItem">
                            <Setter Property="Foreground" Value="#444e63" />
                            <Setter Property="Margin" Value="3" />
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E8EBEF" />
                                    <Setter Property="Foreground" Value="#417FF9" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F4F5F7" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBoxItem
                        Name="ListItemRoutine"
                        Focusable="True"
                        IsSelected="True">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Width="12"
                                Height="12"
                                Margin="2,0,0,0"
                                HorizontalAlignment="Left"
                                FontFamily="pack://application:,,,/Resources/Fonts/#IconFont"
                                FontSize="12"
                                Foreground="#e9af20"
                                Text="&#xe605;" />
                            <TextBlock Margin="10,0,0,0" Text="常规" />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </Grid>
        </Border>

        <!--  右侧内容栏  -->
        <Border
            Grid.Column="1"
            Margin="0,5,5,5"
            Background="White"
            CornerRadius="8">
            <Grid>
                <!--  内容栏  -->
                <Grid>
                    <CheckBox
                        Name="ChkIsMultipleTab"
                        Margin="36,30,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="主窗口多标签展示"
                        IsChecked="True" />
                    <CheckBox
                        Name="ChkIsLikeSearch"
                        Margin="36,60,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="对象名模糊搜索"
                        IsChecked="True" />
                    <CheckBox
                        Name="ChkIsContainsObjName"
                        Margin="36,90,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="左侧表、视图菜单包含表备注说明"
                        IsChecked="True" />
                    <CheckBox
                        Name="ChkIsShowSaveWin"
                        Margin="36,120,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="修改备注时是否弹出保存提示对话框"
                        IsChecked="True" />
                </Grid>

                <!--  操作栏  -->
                <Border
                    Height="36"
                    VerticalAlignment="Bottom"
                    Background="#f5f5f5"
                    CornerRadius="0 0 8 8">
                    <hc:SimpleStackPanel
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        <hc:UniformSpacingPanel Spacing="10">
                            <Button
                                x:Name="BtnSave"
                                Height="25"
                                Padding="20,0,20,0"
                                Click="BtnSave_OnClick"
                                Content="保存"
                                Cursor="Hand"
                                Style="{StaticResource ButtonPrimary}" />
                            <Button
                                x:Name="BtnCancel"
                                Height="25"
                                Padding="20,0,20,0"
                                BorderThickness="0.4"
                                Click="BtnCancel_OnClick"
                                Content="取消"
                                Cursor="Hand" />
                        </hc:UniformSpacingPanel>
                    </hc:SimpleStackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</hc:Window>
